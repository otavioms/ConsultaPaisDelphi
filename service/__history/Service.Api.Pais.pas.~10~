unit Service.Api.Pais;

interface

uses
  Model.Pais,
  Model.NomePais,
  Model.MoedaPais,
  System.SysUtils, System.Classes, System.NET.HttpClient, System.NET.URLClient, System.JSON;

type
  TPaisApiService = class
  private
    FHttpClient: THTTPClient;
  public
    constructor Create;
    destructor Destroy; override;

    function ConsultarPais(const ANomePais: string): TPaisModel;
  end;

implementation

{ TPaisApiService }

constructor TPaisApiService.Create;
begin
  FHttpClient := THTTPClient.Create(nil);
end;

end.

